<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".T17_Service.MyServiceActivity">

    <Button
            android:text="start service"
            android:layout_centerInParent="true"
            android:id="@+id/btnStartService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnStartService"
            android:text="show time : bound service"
            android:id="@+id/btnBoundService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnBoundService"
            android:text="remote send"
            android:id="@+id/btnRemoteSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>